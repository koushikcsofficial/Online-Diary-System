<div class="col-lg-12">

    <!-- Dropdown Card Example -->
    <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Data.Diary_Subject</h6>
            <div class="dropdown no-arrow">
                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                    <div class="dropdown-header">Actions:</div>
                    @if (Session["AccountType"].ToString() == "officialuser" && ViewBag.Data.SubmitionAccountDetail.User_Email != Session["LoginEmail"].ToString())
                    {
                        <a class="dropdown-item" href="@Url.Action("UpdateDiaryByOfficial","Diary", new { diary_Id = ViewBag.Data.Diary_Id, option=1 })">Accept Diary</a>
                        <a class="dropdown-item" href="@Url.Action("UpdateDiaryByOfficial","Diary", new { diary_Id = ViewBag.Data.Diary_Id, option=0 })">Reject Diary</a>
                    }
                    else if ((Session["AccountType"].ToString() == "user" || Session["AccountType"].ToString() == "officialuser") && ViewBag.Data.Diary_IsAccepted == 2)
                    {
                        <a class="dropdown-item" href="@Url.Action("UpdateDiaryByUser","Diary", new { diary_Id = ViewBag.Data.Diary_Id })">Update Diary</a>
                        <a class="dropdown-item" href="@Url.Action("DeleteDiary","Diary", new { diary_Id = ViewBag.Data.Diary_Id })">Delete Diary</a>
                    }
                    else
                    {
                        <p class="dropdown-item">No action to perform</p>
                    }
                </div>
            </div>
        </div>
        <!-- Card Body -->
        <div class="card-body">
            @ViewBag.Data.Diary_Content
        </div>
    </div>

</div>

